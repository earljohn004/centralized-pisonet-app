{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "centralized-pisonet-app",
  "version": "0.1.0",
  "identifier": "com.centralized-pisonet-app.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "centralized-pisonet-app",
        "maximized": true,
        "decorations": true,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "systemTray": {
      "enabled": true
    }
  }
}
